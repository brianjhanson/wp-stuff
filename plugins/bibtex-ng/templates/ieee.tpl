<ol>
<!-- START BLOCK : bibtex_entry -->
<li id="{citation}" style="float: left"><div>{formatted_entry}</div> 
    <div class="highslide-html-content" id="highslide-html-{citation}">
	<div class="highslide-header">
		<ul>
			<li class="highslide-move">
				<a href="#" onclick="return false">&harr;</a>
			</li>
			<li class="highslide-close">
				<a href="#" onclick="return hs.close(this)">&times;</a>
			</li>
		</ul>	    
	</div>
	<div class="highslide-body">
		<code>{entry}</code>
	</div>
    <div class="highslide-footer">
        <div>
            <span class="highslide-resize" title="Resize">
                <span></span>
            </span>
        </div>
    </div>
    </div>
    <div style="text-align: right"><a href="#{citation}" onclick="return hs.htmlExpand(this, { contentId: 'highslide-html-{citation}' } )" class="highslide">bibtex</a> | {link} </div>
</li>
<!-- END BLOCK : bibtex_entry -->
</ol>